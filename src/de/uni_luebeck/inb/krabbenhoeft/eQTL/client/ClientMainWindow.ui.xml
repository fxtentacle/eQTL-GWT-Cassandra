<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:h="urn:import:de.uni_luebeck.inb.krabbenhoeft.eQTL.client">
	<g:DockLayoutPanel>
		<g:north size="25">
			<g:MenuBar>
				<g:MenuItem>
					Load Data Set
					<g:MenuBar vertical="true" ui:field="loadMenu" />
				</g:MenuItem>
				<g:MenuItem ui:field="menuItemForLayers" visible="false">Select Layer</g:MenuItem>
			</g:MenuBar>
		</g:north>
		<g:center>
			<g:SplitLayoutPanel>
				<g:north size="160">
					<g:LayoutPanel ui:field="layerViewContainer" />
				</g:north>
				<g:center>
					<g:LayoutPanel ui:field="layerRowsContainer" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 